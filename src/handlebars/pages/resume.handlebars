<!doctype html>
<html>
	{{> head title="Justin Ryder - Resume"}}
	<body class="page">
		{{> header}}
		<article role="main" class="resume pageContent">
			<h2 class="pageContent_header">Resume</h2>
			{{#each jobs}}
				<section class="pageSection resume_job">
					<h4 class="pageSection_header">{{jobTitle}}</h4>
					<h3 class="pageSection_header pageSection_header-sub">
						<a href="{{employer.website}}">
							{{#if employer.img}}
								<img
									src="{{employer.img.src}}"
									alt="{{employer.img.alt}} Logo"
									title="{{employer.name}}"
									style="
										width:{{employer.img.width}};
										height:{{employer.img.height}};" />
							{{else}}
								{{employer.name}}
							{{/if}}
						</a>
						<span>
							{{startDate}} - {{endDate}}
						</span>
					</h3>
					<ul class="bulletedList">
						{{#each responsibilities}}
							<li class="bulletedList_item">
								{{this}}
							</li>
						{{/each}}
					</ul>
				</section>
			{{/each}}
		</article>
		{{> footer}}
	</body>
</html>
